<div class="controls">
    <?= $tabs ?>
    <div class="icinga-module module-monitoring">
        <?= $this->partial('partials/object/host-header.phtml', 'monitoring', ['object' => $host]) ?>
    </div>
    <?= $eventtypeForm ?>
    <?= $paginator ?>
    <?= $autorefreshControl ?>
</div>
<div class="content">
<?php if (empty($events)): ?>
    <p><?= $this->translate('No events found.') ?></p>
</div>
<?php return; endif ?>
    <table class="events-table table-row-selectable" data-base-target="_next">
        <thead>
        <tr>
            <?php foreach (array_keys($fields) as $field): ?>
            <th><?= $this->escape($field) ?></th>
            <?php endforeach ?>
        </tr>
        </thead>
        <tbody>
        <?php foreach ($events as $event): ?>
            <tr href="<?= $documentsUri->with(array('index' => $event['_index'], 'type' => $event['_type'], 'id' => $event['_id'])) ?>">
            <?php
            foreach ($fields as $getter){
                try{
                    $column = $getter($event['_source']);
                    $ellipsis = $this->ellipsis($column, 100);
                    if ($column !== $ellipsis) {
                        echo "<td title=\"{$this->escape($column)}\"> {$this->escape($ellipsis)}</td>";
                    }else{
                        echo "<td> {$this->escape($column)}</td>";
                    }
                }catch (\Throwable $e){
                    echo "<td></td>";
                }
            }?>
            </tr>
        <?php endforeach ?>
        </tbody>
    </table>
</div>
